<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <android.support.v7.widget.CardView
        android:layout_width="200dp"
        android:layout_height="350dp"
        app:cardBackgroundColor="@color/colorPrimaryDark"
        app:cardCornerRadius="10dp"
        android:layout_marginTop="24dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:src="@android:mipmap/sym_def_app_icon"
                android:id="@+id/imagenPieza"/>
            <!--<RadioButton
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_below="@+id/imagen"
                android:gravity="center"
                android:text="value1"/>-->

            <!--<Button
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/imagenPieza"
                android:id="@+id/botonPrecioPintura"
                android:text="S.P."/>

            <Button
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/imagenPieza"
                android:id="@+id/botonPrecioCompleto"
                android:text="P.C."/>-->
            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:id="@+id/seleccionPrecio"
                android:layout_below="@+id/imagenPieza"
                android:orientation="vertical">
                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:id="@+id/sinPrecio"
                    android:text="No agregar"/>
                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:id="@+id/soloPintura"
                    android:text="Solo Pintura"/>
                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:id="@+id/precioCompleto"
                    android:text="Precio Completo"/>

            </RadioGroup>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>